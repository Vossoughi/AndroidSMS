<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sms_receiver"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="vossoughi.smsreceiver.SmsReceiverActivity">

    <TextView
        android:text="@string/top_textview"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:id="@+id/textView"/>

    <TextView
        android:layout_width="@dimen/top_box_width"
        android:layout_height="@dimen/top_box_height"
        android:layout_marginTop="@dimen/vertical_margin_small"
        android:layout_marginBottom="@dimen/vertical_margin_medium"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/border"
        android:paddingLeft="@dimen/top_box_paddingLeft"
        android:paddingStart="@dimen/top_box_paddingLeft"
        android:paddingRight="@dimen/top_box_paddingLeft"
        android:paddingEnd="@dimen/top_box_paddingLeft"
        android:textSize="10pt"
        android:id="@+id/editText"/>

    <TextView
        android:text="@string/bottom_textview"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:id="@+id/textView2"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/vertical_margin_small"
        android:layout_marginBottom="@dimen/vertical_margin_medium"
        android:background="@drawable/border"
        android:paddingLeft="@dimen/top_box_paddingLeft"
        android:paddingStart="@dimen/top_box_paddingLeft"
        android:paddingRight="@dimen/top_box_paddingLeft"
        android:paddingEnd="@dimen/top_box_paddingLeft"
        android:id="@+id/editText2"
        android:textSize="8pt"
        android:minLines="10"/>
</LinearLayout>